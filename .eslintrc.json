{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"mocha": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
        "plugin:ava/recommended",
		"plugin:mocha/recommended",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": [
        "ava",
		"mocha",
		"react"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
